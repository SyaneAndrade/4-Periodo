		btnVoltar.setBounds(10, 364, 89, 23);
		contentPane.add(btnVoltar);
		
		
		
		Pesquisa.addActionListener(new java.awt.event.ActionListener() {
		    public void actionPerformed(java.awt.event.ActionEvent e) {

		            System.out.println(Pesquisa.getText());
		            DefaultTableModel val = (DefaultTableModel) table.getModel();
		            val.setRowCount(0);
		            try {
		    			List<Projetos> Projetos = pdb.listarProjetosNome(Pesquisa.getText());
		    			
		    			for (Projetos p: Projetos){
//		    				{"Codigo","Nome","Data","Info Projeto","COD Departamento"}
		    				Format formatter = new SimpleDateFormat("DD/MM/YYYY");
		    				String data = formatter.format(p.getData());
		    				val.addRow(new String[]{p.getCodProj(),p.getNome(),data,p.getInfoProj(),p.getCodDep()});
		    			}
		    		} catch (ClassNotFoundException e1) {
		    			// TODO Auto-generated catch block
		    			e1.printStackTrace();
		    		} catch (SQLException e1) {
		    			// TODO Auto-generated catch block
		    			e1.printStackTrace();
		    		}	
		            
		            
		            
		    }
